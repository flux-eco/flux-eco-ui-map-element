{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://flux-eco.fluxlabs.ch/components/flux-eco-ui-map-element/schemas/state.json",
  "type": "object",
  "properties": {
    "mapElementView": {
      "$ref": "#/$defs/MapElementView"
    },
    "mapElementMarkers": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/MapElementMarker"
      },
      "default": []
    }
  },
  "required": [
    "mapElementView",
    "mapElementMarkers"
  ],
  "additionalProperties": false,
  "$defs": {
    "MapElementView": {
      "type": "object",
      "properties": {
        "center": {
          "$ref": "#/$defs/LatLng"
        },
        "zoom": {
          "type": "number",
          "default": 13
        },
        "options": {
          "type": "object"
        }
      },
      "required": [
        "center",
        "zoom"
      ],
      "additionalProperties": false
    },
    "MapElementMarker": {
      "type": "object",
      "properties": {
        "geoLocationLink": {
          "$ref": "https://flux-eco.fluxlabs.ch/components/flux-eco-ui-link-elements/schemas/states.json/#$defs/geoLocationLinkElementState"
        },
        "radius": {
          "type": "number"
        }
      },
      "required": [
        "id",
        "link",
        "radius"
      ],
      "additionalProperties": false
    },
    "LatLng": {
      "type": "object",
      "properties": {
        "lat": {
          "type": "number",
          "default": 34.238972
        },
        "lng": {
          "type": "number",
          "default": -118.433449
        }
      }
    }
  }
}
