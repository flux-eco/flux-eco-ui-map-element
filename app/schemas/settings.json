{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://flux-eco.fluxlabs.ch/components/flux-eco-ui-map-element/schemas/settings.json",
  "type": "object",
  "properties": {
    "mapContainerDimensions": {
      "$ref": "#/$defs/MapContainerDimensions",
      "required": [ "height", "width"]
    },
    "mapElementLayers": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/MapElementLayer",
        "required": [
          "layerUrl",
          "layerOptions"
        ]
      }
    }
  },
  "required": [
    "mapContainerDimensions", "mapElementLayers"
  ],
  "$defs": {
    "MapContainerDimensions": {
      "type": "object",
      "properties": {
        "height": {
          "type": "string",
          "default": "800px"
        },
        "width": {
          "type": "string",
          "default": "800px"
        }
      },
      "default": {
        "height": "800px",
        "width": "800px"
      },
      "required": [
        "height",
        "width"
      ]
    },
    "MapElementLayer": {
      "type": "object",
      "properties": {
        "layerUrl": {
          "type": "string",
          "default": "https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png"
        },
        "layerOptions": {
          "type": "object",
          "properties": {
            "attribution": {
              "type": "string",
              "default": "&copy; <a href=\"https://www.openstreetmap.org/copyright\">OpenStreetMap</a> contributors"
            }
          },
          "default": {
            "attribution": "&copy; <a href=\"https://www.openstreetmap.org\">OpenStreetMap</a> contributors"
          }
        }
      },
      "required": [
        "layerUrl",
        "layerOptions"
      ]
    }
  }
}